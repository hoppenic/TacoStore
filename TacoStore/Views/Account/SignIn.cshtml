@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<h2>Please Sign In</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>
}

<form method="post" asp-controller="Account" asp-action="SignIn">
    <div class="form-group">
        <label asp-for="UserName">User Name</label>
        <input asp-for"UserName" class="@(ViewData.ModelState.ContainsKey("Username") && ViewData.ModelState["UserName"].Errors.Any() ? "form-control is-invalid":"form-control")" type="text"
               placeholder="Enter your Username" />
        @if (ViewData.ModelState.ContainsKey("UserName"))
        {
            foreach (var error in ViewData.ModelState["UserName"].Errors)
            {
                <div class="invalid-feedback">
                    @error.ErrorMessage
                </div>
            }

        }

    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your Password" />
    </div>
    <input type="submit" class="btn btn-primary" value="Sign In" />
</form>



    </div>
